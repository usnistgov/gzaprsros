<launch>

<!--
Run as, e.g., 

    roslaunch aprs_objects modbus_server.launch port:=502 debug:=0x01
-->

<arg name="port" default="1502" />
<arg name="topic" default="conveyor" />
<arg name="debug" default="1" />

<node pkg="aprs_objects" name="aprs_modbus_server" type="aprs_modbus_server_node" args="-p $(arg port) -t $(arg topic) -d $(arg debug)"  output="screen" />

</launch>
